@page "/complete/{delyId}"
@using RestaurantDaoBase.Models;
@using System.Net.Http;
@using System.Net.Http.Json;
@using RestaurantDaoBase;
@using Serilog;
@using Services
@inject AuthService authService
@inject NavigationManager NavigationManager

@code {
    
    [Parameter]
    public string delyId { get; set; }

    public HttpClient httpClient = new HttpClient();
    protected override async Task OnInitializedAsync()
    {
        //httpClient.BaseAddress = new Uri("http://localhost:5175/");
        httpClient.BaseAddress = new Uri("http://ec2-18-214-61-45.compute-1.amazonaws.com:5175/");
        httpClient.DefaultRequestHeaders.Add("Authorization", $"Bearer {AuthService.User.Token}");
        var response = (await httpClient.PutAsJsonAsync<bool>($"api/delivery/Complete/" + delyId, true));
        if (response.IsSuccessStatusCode)
        {
            //Log.Debug("render start");
            NavigationManager.NavigateTo("/completed", forceLoad: true);
        }
        else
            NavigationManager.NavigateTo("/pickedup", forceLoad: true);
    }
}
