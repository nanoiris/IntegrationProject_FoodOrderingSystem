<div class="flash-message @(IsVisible ? "visible" : "")">
    @Message
</div>

@code {
    [Parameter]
    public string Message { get; set; }

    private bool IsVisible { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        IsVisible = true;
        StateHasChanged();
        await Task.Delay(3000); // Wait for 3 seconds
        IsVisible = false;
        Message = "";
        StateHasChanged();
    }
}

