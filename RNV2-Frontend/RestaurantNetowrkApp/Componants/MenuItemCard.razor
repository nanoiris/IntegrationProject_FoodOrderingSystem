@using Data.Dto

<div class="list-card bg-white h-100 rounded overflow-hidden position-relative shadow-sm">
    <div class="list-card-image">
        <a href="#">
            <img src="img/rest/@Item.Logo" class="img-fluid item-img w-100">
        </a>
    </div>
    <div class="p-3 position-relative">
        <div class="list-card-body">
            <h6 class="mb-1">
                <p  class="text-black">@Item.Name</p>
            </h6>
            <p class="text-gray mb-3">@Item.Description</p>
            <p class="text-gray m-0"> <span class="text-black-50"> $@Item.Price</span></p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public MenuItemDto Item { get; set; }
}
