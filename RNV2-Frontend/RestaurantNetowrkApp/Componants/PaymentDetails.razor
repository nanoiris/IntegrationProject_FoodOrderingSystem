<div class="shadow bg-white p-3 mb-3 clearfix">
    <p class="mb-1">SubTotal <span class="float-right text-dark">$@Subtotal</span></p>
    <p class="mb-1">GST/HST <span class="float-right text-dark">$@(Subtotal * (decimal)0.1)</span></p>
    <p class="mb-1">PST/TST/QST <span class="float-right text-dark">$@(Subtotal * (decimal)0.05)</span></p>
    <p class="mb-1">
        Delivery Fee<span class="text-info ml-1"><i class="icofont-info-circle"></i></span><span class="float-right text-dark">$10</span>
    </p>
    <hr>
    <h6 class="font-weight-bold mb-0">Total <span class="float-right">$@Total</span></h6>
</div>

@code {
    [Parameter] public decimal? Subtotal { get; set; }
    [Parameter] public decimal? Total { get; set; }

}
