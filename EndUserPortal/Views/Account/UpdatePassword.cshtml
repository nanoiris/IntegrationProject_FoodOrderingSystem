@model EndUserPortal.Models.ViewModels.UpdatePasswordViewModel
@{
    ViewData["Title"] = "UpdatePassword";
}

    <div class="osahan-profile">
      <div class="container position-relative">
        <div class="py-5 osahan-profile row">
          <div class="col-md-4 mb-3">
            <div class="bg-white rounded shadow-sm sticky_sidebar overflow-hidden">
              <a href="profile.html" class="">
                <div class="d-flex align-items-center p-3">
                  <div class="left mr-3">
                    <img alt="#" src="img/user1.jpg" class="rounded-circle" />
                  </div>
                  <div class="right">
                    <h6 class="mb-1 font-weight-bold">Name <i class="feather-check-circle text-success"></i></h6>
                    <p class="text-muted m-0 small"><span class="__cf_email__" data-cfemail="0c656d61637f6d646d624c6b616d6560226f6361">[email&#160;protected]</span></p>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-8 mb-3 pb-5" style="min-height: 50vh">
            <div class="rounded shadow-sm p-4 bg-white">
              <h5 class="my-5">Change Password</h5>
              <div id="edit_profile">
                <div>
                  <form method="post">
                    <div class="form-group">
                      <label asp-for="Password">Enter new password</label>
                      <input asp-for="Password" type="text" class="form-control" id="InputPassword2" />
                       <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="ConfirmPassword">Retype password</label>
                      <input asp-for="ConfirmPassword" type="text" class="form-control" id="InputRePassword2" />
                      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center my-5">
                      <button type="submit" class="btn btn-primary btn-block">Confirm</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>