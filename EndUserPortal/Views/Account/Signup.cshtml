@model EndUserPortal.Models.ViewModels.SignupViewModel
@{
    ViewData["Title"] = "Signup";
}
@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

    @if (Model.Message != null && Model.Message != "")
    {
    if (Model.Message.Contains("successfully!"))
    {
        <div class="alert alert-success alert-dismissible shadow-inset fade show" role="alert">
            <span class="alert-inner--icon"><span class="fas fa-check"></span></span>
            <span class="alert-inner--text">
                @Model.Message
            </span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible shadow-inset fade show" role="alert">
            <span class="alert-inner--icon"><span class="fas fa-fire"></span></span>
            <span class="alert-inner--text">
                @Model.Message
            </span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
    }

<div class="osahan-signup login-page">
    <div class="d-flex align-items-center justify-content-center flex-column vh-100">
    <div class="px-5 col-md-6 mxl-auto">
        <div class="px-5 col-10 mx-auto">
        <h2 class="text-dark my-0">Hello!</h2>
        <p class="text-50">Sign up to continue</p>
        <form class="mt-4 mb-4" id="signupForm" method="post" enctype="multipart/form-data">
            <div class="form-group">
            <label asp-for="Name" class="text-dark">Name</label>
            <input asp-for="Name" type="text" placeholder="" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Email" class="text-dark">Email</label>
            <input asp-for="Email" type="text" placeholder="" class="form-control" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="PhoneNo" class="text-dark">Mobile Number</label>
            <input asp-for="PhoneNo" type="text" placeholder="" class="form-control" id="Phone" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Password" class="text-dark">Password</label>
            <input asp-for="Password" type="password" placeholder="" class="form-control" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="text-dark">Retype</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="" class="form-control" id="ConformPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-group mr-3 mb-3">
                <div class="custom-file mb-3 mr-3">
                    <label class="custom-file-label" asp-for="Upload"></label>
                    <input type="file" asp-for="Upload"  class="form-control d-none" />
                </div>
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">SIGN UP</button>
        </form>
        </div>
        <div class="new-acc d-flex align-items-center justify-content-center">
        <a asp-controller="Account" asp-action="Login">
            <p class="text-center m-0">Already an account? Sign in</p>
        </a>
        </div>
    </div>
    </div>
</div>