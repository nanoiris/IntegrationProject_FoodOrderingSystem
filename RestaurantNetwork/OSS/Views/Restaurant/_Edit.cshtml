@model OSS.Models.Restaurant.EditViewModel

<div class="col-md-12">
    <form asp-action="Edit" asp-controller="Restaurant" class="mt-2 mb-4 row" method="post" enctype="multipart/form-data">
        <!--<div asp-validation-summary="All" class="text-danger" role="alert"></div>-->

        <div class="form-group col-8">
            <label asp-for="Name" class="text-dark">Restaurant Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-4">
            <label class="text-dark">Restaurant Category</label>
            <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control">
            </select>
        </div>

        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" asp-for="IsFeatured" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Featured
                </label>
            </div>
        </div>

        <div class="form-group col-6">
            <label asp-for="Email" class="text-dark"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="PhoneNo" class="text-dark"></label>
            <input asp-for="PhoneNo" class="form-control" />
            <span asp-validation-for="PhoneNo"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="Street" class="text-dark"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="City" class="text-dark"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="State" class="text-dark"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Country" class="text-dark"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="Zip" class="text-dark"></label>
            <input asp-for="Zip" class="form-control" />
            <span asp-validation-for="Zip"></span>
        </div>

        <div class="col-12 row">
            <div class="col-6">
                <img src="@Model.FullLogoPath" width="50%" height="auto" />
            </div>
            <div class="col-6">
                <div class="custom-file mb-3 mr-3">
                    <label class="custom-file-label" asp-for="UploadLogo">Restaurant Logo</label>
                    <input asp-for="UploadLogo" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-12">
            <br />
        </div>
        <div class="col-12 form-group ">
            <label asp-for="Description" class="text-dark"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="col-4">
        </div>
        <br />
        <input readonly asp-for="Id" type="hidden" />
        <input readonly asp-for="FullLogoPath" type="hidden" />
        <div class="col-4">
            <button type="submit" class=" col-4 btn btn-primary btn-lg btn-block">Update</button>
        </div>

    </form>
</div>
