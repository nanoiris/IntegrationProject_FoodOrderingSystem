@model OSS.Models.Category.DeleteViewModel
<div class="col-md-12">
    <form asp-action="Delete" asp-controller="Category" class="mt-2 mb-4 row" method="post">
        <!--<div asp-validation-summary="All" class="text-danger" role="alert"></div>-->
        <div class="row col-12">
            <div class="form-group col-12">
                <img src="@Model.DeleteRow.FullLogoPath" />
            </div>
            <div class="col-12">
                <label class="text-dark">ID</label>
                <input readonly asp-for="DeleteRow.Id" class="form-control" />
            </div>

            <div class="form-group col-12">
                <label asp-for="DeleteRow.Name" class="text-dark">Name</label>
                <input readonly asp-for="DeleteRow.Name" class="form-control" />
            </div>
            <div class="form-group col-12">
                <label asp-for="DeleteRow.Logo" class="text-dark">Logo Path</label>
                <input readonly asp-for="DeleteRow.Logo" class="form-control" />
            </div>

            <input type="hidden" asp-for="DeleteRow.FullLogoPath" />
            <div class="col-4">
            </div>
            <br />
            <div class="col-4">
                <button readonly type="submit" class=" col-4 btn btn-primary btn-lg btn-block">Delete</button>
            </div>
        </div>
    </form>
</div>
