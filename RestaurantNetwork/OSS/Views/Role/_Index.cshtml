@model OSS.Models.Role.ListViewModel;

<div class="row pb-3">
    <div class="col-2">
        <a class="btn btn-icon-only btn-pill btn-primary" asp-controller="Role" asp-action="Add">
            <i class="fa fa-plus"></i>
        </a>
    </div>
</div>
@if (Model.Rows != null && Model.Rows.Count > 0)
{
    <table class="table table-hover shadow-inset rounded table-striped">
        <tr class="font-weight-bold">
            @foreach (var tabHeader in Model.TabHeaders)
            {
                <th class="border-0" scope="col" id="class">@tabHeader</th>
            }
        </tr>
        @foreach (var item in Model.Rows)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Name</th>
                <th scope="row">
                    <a asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-icon-only btn-pill btn-primary">
                        <i class="fa fa-minus"></i>
                    </a>
                </th>
            </tr>
        }
    </table>
}