@model OSS.Models.User.DeleteViewModel

<div class="col-md-12">
    <form asp-action="Delete" asp-controller="User" class="mt-2 mb-4 row" method="post">
        <!--<div asp-validation-summary="All" class="text-danger" role="alert"></div>-->
        <div class="row col-12">
            <div class="form-group col-4">
                <img src="@Model.DeleteRow.Avatar" width="50%" height="auto" />
            </div>
            <div class="col-8 row">
                <div class="form-group col-12">
                    <label asp-for="DeleteRow.Name" class="text-dark">User Name</label>
                    <input readonly asp-for="DeleteRow.Name" class="form-control" />
                </div>

                <div class="form-group col-12">
                    <label class="text-dark">User Email</label>
                    <input readonly asp-for="DeleteRow.Email" class="form-control" />
                </div>

                <div class="col-12">
                    <label class="text-dark">User Phone</label>
                    <input readonly asp-for="DeleteRow.PhoneNo" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group col-12">
            <label asp-for="DeleteRow.Restaurant.Name" class="text-dark">Restaurant Name</label>
            <input readonly asp-for="DeleteRow.Restaurant.Name" class="form-control" />
        </div>
        <div class="form-group col-6">
            <label asp-for="DeleteRow.Restaurant.PhoneNo" class="text-dark">Restaurant Phone</label>
            <input readonly asp-for="DeleteRow.Restaurant.PhoneNo" class="form-control" />
        </div>
        <div class="form-group col-6">
            <label asp-for="DeleteRow.Restaurant.Email" class="text-dark">Restaurant Email</label>
            <input readonly asp-for="DeleteRow.Restaurant.Email" class="form-control" />
        </div>

        <div class="col-4">
        </div>
        <br />
        <input readonly asp-for="DeleteRow.Id" type="hidden" />
        <input readonly asp-for="DeleteRow.Restaurant.Id" type="hidden" />
        <input readonly asp-for="DeleteRow.Avatar" type="hidden" />
        <div class="col-4">
            <button readonly type="submit" class=" col-4 btn btn-primary btn-lg btn-block">Delete</button>
        </div>

    </form>
</div>
