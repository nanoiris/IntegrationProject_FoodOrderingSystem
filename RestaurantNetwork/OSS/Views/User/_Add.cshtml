@model OSS.Models.User.AddViewModel

<div class="col-md-6">
    <form asp-action="Add" asp-controller="User" class="mt-2 mb-4 row" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <div class="form-group col-12">
            <label asp-for="Name" class="text-dark"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group col-12">
            <label asp-for="Email" class="text-dark"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group col-12">
            <label asp-for="Phone" class="text-dark"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Password" class="text-dark"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="col-12">
            <div class="custom-file mb-3 mr-3">
                <label class="custom-file-label" asp-for="UploadLogo">Logo</label>
                <input asp-for="UploadLogo" class="form-control" />
            </div>
        </div>
        <div class="col-12">
            <br />
        </div>
        <input readonly asp-for="RestaurantId" type="hidden" />
        <br />
        <div class="col-4"></div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
        <div class="col-4"></div>
    </form>
</div>
