@model RMS.Models.Category.AddViewModel

<div class="section">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-gray">
        @foreach (var path in Model.Paths)
        {
        <li class="breadcrumb-item"><a asp-controller="@path.ControllerName" asp-action="@path.ActionName">@path.Titile</a></li>
        }
        </ol>
    </nav>

    
     @if (TempData["FailureMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["FailureMessage"]
            </div>
            <script>
                setTimeout(function() {
                    var flashMessage = document.querySelector('.alert-danger');
                    flashMessage.style.display = 'none';
                }, 10000);
            </script>
        }


   <form method="post" asp-action="Add" asp-controller="Category">
      
         <div class="form-group">
          <label asp-for="Name"></label>
          <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
       </div>
       <div class="text-center">
         <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
   </form>
</div>

