@model RMS.Models.LoginViewModel
@{
  ViewData["Title"] = "Login";
}
@{
  Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}


 <div class="login-page vh-100">

      <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="px-5 col-md-6 ">
          <div class="px-5 col-10 mx-auto">
            <h2 class="text-dark my-0"><i class="fa fa-utensils text-danger"></i> Restaurant Admin, Welcome! </h2>
            <p class="text-50">Sign in to continue</p>
                  @if (TempData["SuccessMessage"] != null)
                  {
                      <div class="alert alert-success">
                          @TempData["SuccessMessage"]
                      </div>
                      <script>
                          setTimeout(function() {
                          var flashMessage = document.querySelector('.alert-success');
                          flashMessage.style.display = 'none';
                          }, 10000);
                      </script>
                  }
              else if (TempData["FailureMessage"] != null)
                  {
                  <div class="alert alert-danger">
                      @TempData["FailureMessage"]
                  </div>
                  <script>
                      setTimeout(function() {
                      var flashMessage = document.querySelector('.alert-danger');
                      flashMessage.style.display = 'none';
                      }, 10000);
                  </script>
                  }
            <form class="mt-5 mb-4" method="post">
              <div class="form-group">
                <label asp-for="Email" class="text-dark">Email</label>
                <input asp-for="Email" type="text" placeholder="" class="form-control" id="Email" />
                 <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Password" class="text-dark">Password</label>
                <input asp-for="Password" type="password" placeholder="" class="form-control" id="Password" />
                 <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <button class="btn btn-primary btn-lg btn-block">SIGN IN</button>
            </form>
             <br>
            <div class="d-flex align-items-center justify-content-center">
              <a asp-action="Signup">
                @* <p class="text-center m-0">Don't have an account? Sign up</p> *@
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

