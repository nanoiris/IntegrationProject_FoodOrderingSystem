                                        <div class="text-muted m-0 ml-auto mr-3 small">
                                            Total Payment<br />
                                            <span class="text-dark font-weight-bold">$@order.PayTotal?.ToString("0.00")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


